<?php
/**
 * App Configuration
 */
class Config extends Core
{

	public function getAppParam($app_param)
	{
		$app_param_all = $this->readFileToArr();

		foreach ($app_param_all as $key => $value)
		{
			if ($result = strstr($value, $app_param))
			{
				return trim(ltrim(strstr($result, '='), '='));
			}
		}
		return false;
	}
}